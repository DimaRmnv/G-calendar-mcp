# Google Calendar MCP - Cloud Configuration
# Copy to .env and fill in values

# =============================================================================
# PostgreSQL Database (shared with travel-postgres container)
# =============================================================================
POSTGRES_HOST=travel-postgres
POSTGRES_PORT=5432
POSTGRES_USER=travel
POSTGRES_PASSWORD=your_postgres_password_here
POSTGRES_DB=google_calendar_mcp

# =============================================================================
# API Security
# =============================================================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
GCAL_MCP_API_KEY=your_api_key_here

# =============================================================================
# OAuth Configuration
# =============================================================================
# OAuth client credentials (from Google Cloud Console)
# Can also be provided via oauth_client.json file
GCAL_MCP_OAUTH_CLIENT_ID=your_client_id.apps.googleusercontent.com
GCAL_MCP_OAUTH_CLIENT_SECRET=your_client_secret

# OAuth redirect URI (must match Google Cloud Console)
GCAL_MCP_OAUTH_REDIRECT_URI=https://mcp-serv.duckdns.org/mcp/calendar/oauth/callback
GCAL_MCP_SERVER_BASE_URL=https://mcp-serv.duckdns.org/mcp/calendar

# =============================================================================
# Features (optional)
# =============================================================================
GCAL_MCP_TIME_TRACKING_ENABLED=true
GCAL_MCP_CONTACTS_ENABLED=true
